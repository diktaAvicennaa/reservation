rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reservations - admin bisa read/write semua, customer hanya bisa create
    match /reservations/{doc=**} {
      allow read, write: if request.auth != null; // Admin only
      allow create: if true; // Customer bisa buat pesanan baru (tanpa login)
    }
    
    match /products/{doc=**} {
      allow read: if true; // PUBLIC - customer bisa lihat menu di /list
      allow write: if request.auth != null; // Hanya admin bisa edit menu
    }
  }
}