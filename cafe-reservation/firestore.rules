rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin collections - hanya admin (authenticated) yang bisa akses
    match /reservations/{doc=**} {
      allow read, write: if request.auth != null;
    }
    
    match /products/{doc=**} {
      allow read: if true; // Public bisa lihat menu
      allow write: if request.auth != null; // Hanya admin bisa edit menu
    }
  }
}
